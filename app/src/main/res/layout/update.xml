<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Update"
    android:background="@drawable/gradient_bg">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_update_journal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Journal"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="20dp"
            />

        <LinearLayout
            android:id="@+id/linearlay1"
            android:layout_below="@id/tv_update_journal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textAllCaps="true"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_update_title"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-medium"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@drawable/et_bg"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entry"
                    android:textAllCaps="true"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_update_entry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-medium"
                    android:inputType="textMultiLine"
                    android:lines="10"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@drawable/et_bg"
                    />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_update_date_picker"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/linearlay1"
            android:layout_marginTop="30dp"
            android:text="Date"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_calendar"
            android:drawablePadding="20dp"
            android:drawableTint="@color/white"
            android:background="@drawable/btn_bg"
            android:fontFamily="sans-serif-medium"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/tv_update_date_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_update_date_picker"
            android:textColor="@color/white"
            android:text="Date"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:fontFamily="sans-serif-medium"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:id="@+id/btn_update_journal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/tv_update_date_show"
            android:layout_marginTop="30dp"
            android:text="Update Journal"
            android:textColor="@color/white"
            android:background="@drawable/btn_bg"
            android:fontFamily="sans-serif-medium"
            android:paddingRight="70dp"
            android:paddingLeft="70dp"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            />

    </RelativeLayout>

</RelativeLayout>